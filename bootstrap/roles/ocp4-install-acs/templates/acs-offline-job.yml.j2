apiVersion: batch/v1
kind: Job
metadata:
  name: roxctl-offline-job
  namespace: stackrox
spec:
  template:
    metadata:
      name: roxctl-offline-data
    spec:
      restartPolicy: Never
      containers:
      - name: roxctl
        image: "{{ registry_addr['quay'] }}/bjeon1/roxctl-offline:micro"
        envFrom:
        - secretRef:
            name: acs-password
        command: ["/bin/bash", "-c"]
        args:
        - ./roxctl scanner upload-db --insecure-skip-tls-verify=true -p "$password" -e "$ROX_CENTRAL_ADDRESS" --scanner-db-file=scanner-vuln-updates.zip; sleep 10; ./roxctl collector support-packages upload support-pkg-2.6.0-latest.zip --insecure-skip-tls-verify=true -p "$password" -e "$ROX_CENTRAL_ADDRESS"
