    definition: "{{ lookup('template', item ) | from_yaml }}"
  loop:
  - ./templates/pipeline-build-dev.yaml.j2
  - ./templates/pipeline-build-stage.yaml.j2
  - ./templates/pipeline-build-pvc.yaml.j2

