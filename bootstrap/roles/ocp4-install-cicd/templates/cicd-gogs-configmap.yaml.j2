kind: ConfigMap
apiVersion: v1
metadata:
  name: gogs-config
  namespace: cicd
  labels:
    app: gogs
data:
  app.ini: |
    RUN_MODE = prod
    RUN_USER = gogs

    [database]
    DB_TYPE  = postgres
    HOST     = gogs-postgresql:5432
    NAME     = gogs
    USER     = gogs
    PASSWD   = gogs

    [repository]
    ROOT = /opt/gogs/data/repositories

    [server]
    ROOT_URL=http://{{ r_gogs_route.resources[0].spec.host }}
    SSH_DOMAIN={{ r_gogs_route.resources[0].spec.host }}

    [security]
    INSTALL_LOCK = true

    [service]
    ENABLE_CAPTCHA = false

    [webhook]
    SKIP_TLS_VERIFY = true

    [picture]
    DISABLE_GRAVATAR = true
